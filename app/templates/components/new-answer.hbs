{{#if addAnswer}}
  <form>
    <div class="form-group">
      <label for="author"> Name:</label>
      {{input id="author" value=author placeholder="author"}}
    </div>
    <div class="form-group">
      <label for="content">Answer:</label>
      {{textarea id="content" value=content placeholder="answer"}}
    </div>
    <button class="btn btn-lg" {{action 'saveAnswer'}}>Submit</button>
  </form>
{{else}}
  <hr>
  <h3>Add Answer to this Question</h3>
  <button class="btn btn-lg" {{action 'showAnswerForm'}}>Reply</button>
{{/if}}
