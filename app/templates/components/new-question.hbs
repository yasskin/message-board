{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div class="">
    <form class="">
      <div class="form-group">
        <label for="content">Question</label>
        {{textarea value=content id="content"}}
      </div>

      <div class="form-group">
          <label for="author">Supplicant</label>
          {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="note">Notes</label>
        {{input value=note id="note"}}
      </div>

      <div class="form-group">
        <label for="tag" id="tag">Tag</label>
        {{input value=tag id="tag"}}
      </div>

      <button {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-lg" {{action 'showQuestionForm'}}>New Question</button>
{{/if}}
