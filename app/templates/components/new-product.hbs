{{#if addNewProduct}}
<h1>New Product</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="image">Image</label>
        {{input value=image id="image"}}
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        {{textarea value=description id="description"}}
      </div>

      <div class="form-group">
        <label for="cost">Cost</label>
        {{input value=cost id="cost"}}
      </div>

      <button class="btn btn-success" {{action 'saveProduct'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-success" {{action 'showProductForm'}}>Add New Product</button>
{{/if}}
